{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",               
    "moduleResolution": "node",          
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
