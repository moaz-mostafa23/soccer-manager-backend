{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",                // Use CommonJS for Node.js
    "moduleResolution": "node",           // Use Node.js module resolution
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
